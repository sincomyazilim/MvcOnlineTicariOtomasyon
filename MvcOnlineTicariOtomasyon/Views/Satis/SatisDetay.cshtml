@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2> Satış Detayı</h2>
<br />

<table class="table table-striped">
        <tr>
            <th>Satış Id</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Fiyat</th>
            <th>Adet</th>
            <th>Toplam</th>
            <th>Tarih</th>


        </tr>

        @foreach (var s in Model)
        {

            <tr>
                <td>@s.SatisId</td>
                <td>@s.Urun.UrunAd</td>
                <td>@s.Cari.CariAd @s.Cari.CariSoyad </td>
                <td>@s.Personel.PersonelAd @s.Personel.PersonelSoyad </td>
                <td>@s.Fiyat</td>
                <td>@s.Adet</td>
                <td>@s.ToplamTutar</td>
                <td>@s.Tarih.ToShortDateString()</td>



            </tr>
        }

    </table>
    <br />
    <hr />


    <button href="#" class="btn btn-primary">Yazdır</button>