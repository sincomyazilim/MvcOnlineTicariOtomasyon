@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cari
@{
    ViewBag.Title = "CariGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Cari Günceleme</h2>
<br />

@using (Html.BeginForm("CariGuncelle", "Cari", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.CariId)
    @Html.Label("Adı")
    @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CariAd, "", new { @style = "color:red" })
    <br />
    @Html.Label("soyadı")
    @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CariSoyad, "", new { @style = "color:red" })
    <br />
    @Html.Label("Şehir")
    @*@Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })*@
    @Html.DropDownListFor(x => x.ilId, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CariSehir, "", new { @style = "color:red" })
    <br />
    @Html.Label("E-Mail")
    @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CariMail, "", new { @readonly = "​readonly", @style = "color:red" })
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CariSifre, "", new {  @style = "color:red" })
    <br />
    <button class="btn btn-warning">Güncelle</button>
</div>
}
