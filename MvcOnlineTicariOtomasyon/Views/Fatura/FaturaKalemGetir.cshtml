@model MvcOnlineTicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "FaturaKalemGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalem Güncelle</h2>
<br />


@using (Html.BeginForm("FaturaKalemGuncelle", "Fatura", FormMethod.Post))
{
<div class="form-group">

    @Html.HiddenFor(x => x.FaturaKalemId)
    @Html.Label("Fatura Id ")
    @Html.TextBoxFor(x => x.FaturaId, new { @readonly = "readonly", @class = "form-control" })
    <br />
    @Html.Label("Ürün Adı ")
    @Html.TextBoxFor(x => x.UrunAdi, new { @class = "form-control" })
    <br />
    @Html.Label("Miktar ")
    @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })
    <br />
    @Html.Label("Birim Fiyat ")
    @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })

    <br />
    @Html.Label("Tutar ")
    @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control" })
    <br />

    @Html.Label("Açıklama ")
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Güncelle</button>
</div>
}

