@model MvcOnlineTicariOtomasyon.Models.Siniflar.Urun
@{
    ViewBag.Title = "MiktarEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Ürün Miktar Ekleme</h2>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
@using (Html.BeginForm("MiktarEkle", "Urun", FormMethod.Post))
{
        <form class="form-group" method="post">

            @Html.HiddenFor(x => x.UrunId)

            @Html.Label("Stok Ekle ")
            @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
            <br />
            <button class="btn btn-info" id="Btn1">Kaydet</button>

            <script>
                $('#Btn1').click(function () {
                    alert("Stok Miktarı Başarılı Bir Şekilde Eklendi")
                });
            </script>
        </form>
 }







